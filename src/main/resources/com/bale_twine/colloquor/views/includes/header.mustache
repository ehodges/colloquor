<!-- Change Username Modal -->
<div id="changeUsernameModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="changeUsernameLabel">Change Your Username</h3>
    </div>
    <div class="modal-body">
        <div id="emptyUsernameAlert" class="alert alert-error">
            Please Enter A Username.
        </div>
        <form class="form-horizontal" onsubmit="return false;">
            <div class="control-group">
                <label class="control-label" for="userNameInput">Username:</label>
                <div class="controls">
                    <input type="text" id="userNameInput" placeholder="Username" value="{{userName}}">
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button id="saveUsernameChange" class="btn btn-primary">Save Changes</button>
    </div>
</div>
